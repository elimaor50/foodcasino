{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Expo Development Server",
			"type": "shell",
			"command": "npx",
			"args": [
				"expo",
				"start"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Build APK (Development)",
			"type": "shell",
			"command": "npx",
			"args": [
				"eas",
				"build",
				"--platform",
				"android",
				"--profile",
				"development"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Build APK (Production)",
			"type": "shell",
			"command": "npx",
			"args": [
				"eas",
				"build",
				"--platform",
				"android",
				"--profile",
				"production"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "npm",
			"args": [
				"install"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		}
	]
}